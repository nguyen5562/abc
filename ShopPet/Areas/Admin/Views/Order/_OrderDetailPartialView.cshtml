@using ShopPet.Models
@model List<ChiTietHoaDon>
@{
    decimal totalPrice = 0;
}
<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Chi tiết hóa đơn</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="container">
            <div class="wrapper">
                <table class="table">
                    <thead class="table__thead">
                        <tr>
                            <th class="table__th">Mã sản phẩm</th>
                            <th class="table__th">Tên sản phẩm</th>
                            <th class="table__th">Ảnh</th>
                            <th class="table__th">Số lượng mua</th>
                            <th class="table__th">Đơn giá</th>
                            <th class="table__th">Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var items in Model)
                        {
                            <tr class="table-row table-row--chris">
                                <td class="table-row__td">
                                    <p>@items.SanPham.MaSP</p>
                                </td>
                                <td class="table-row__td">
                                    <p>@items.SanPham.TenSP</p>
                                </td>
                                <td class="table-row__td">
                                    <p><img src="@Url.Content("~/Images/" + items.SanPham.Anh)" alt="@items.SanPham.Anh" width="100" height="100" /></p>
                                </td>
                                <td class="table-row__td">
                                    <p>@items.Quantity</p>
                                </td>
                                <td class="table-row__td">
                                    <p>@items.SanPham.GiaBan.ToString("#,##0.###") VNĐ</p>
                                </td>
                                <td class="table-row__td">
                                    <p>@items.Price.ToString("#,##0.###") VNĐ</p>
                                </td>
                            </tr>
                            totalPrice += @items.Price;
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Tổng tiền (VNĐ)</th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th><strong>Total:</strong> @totalPrice.ToString("#,##0.###") VNĐ</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

