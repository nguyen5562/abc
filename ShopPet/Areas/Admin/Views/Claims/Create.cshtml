@model ShopPet.Models.Claims

@{
    ViewData["Title"] = "Create";
}

<div class="content-wrapper">
    <div class="container">

        <section class="content">
            <div class="card">
                <div class="card-heard">
                    <h2 class="card-title" style="margin-left:20px">Thêm mới CLAIM</h2>

                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="ClaimName" class="control-label"></label>
                                    <input asp-for="ClaimName" class="form-control" />
                                    <span asp-validation-for="ClaimName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>

                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>