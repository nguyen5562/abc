@model LoginViewModel;
@{
	ViewData["Title"] = "Login";
}

<section id="form">
	<!--form-->
	<div class="container" >
		<div class="row" style="display:flex">
			<div class="col-sm-6 col-sm-offset-1" >
				<div class="login-form">
					<!--login form-->
					<h2>Login to your account</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<form asp-action="Login" asp-controller="Account">
						<div class="form-group">
							<label>UserName</label>
							<input asp-for="UserName" class="form-control" type="text" />
							<sapn asp-validation-for="UserName" class="text-danger" />
						</div>
						
						<div class="form-group">
							<label>Password</label>
							<input asp-for="Password" class="form-control" type="password" />
							<sapn asp-validation-for="Password" class="text-danger" />
						</div>
						<span>
							<input type="checkbox" class="checkbox">
							Keep me signed in
						</span>
						<button type="submit" class="btn btn-default" style="width:100%">Login</button>
					</form>
				</div><!--/login form-->
			</div>
			<div class="col-sm-6 col-sm-offset-1">
				<div class="login-form">
					<img src="~/Images/hot-sam-do-cho-thu-cung-voi-uu-dai-giam-nua-gia-0.jpeg" height="475px" />
				</div><!--/login form-->
			</div>
		
			
		</div>
	</div>
</section><!--/form-->
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}