@model UserViewModel
@{
	ViewData["Title"] = "Register";

}
<section id="form">
	<!--form-->
	<div class="container">
		<div class="row" style="display:flex">
			<div class="col-sm-6 col-sm-offset-1">
				<div class="signup-form">
					<!--sign up form-->
					<h2>Đăng kí tài khoản</h2>

					<div asp-validation-summary="All" class="text-danger"></div>
					<form asp-action="Create" asp-controller="Account">
						<div class="form-group">
							<label>UserName</label>
							<input asp-for="UserName" class="form-control" type="text" />
							<span asp-validation-for="UserName" class="text-danger" />
						</div>						
						<div class="form-group">
							<label>Email</label>
							<input asp-for="Email" class="form-control" type="email" />
							<span asp-validation-for="Email" class="text-danger" />
						</div>
						<div class="form-group">
							<label>Password</label>
							<input asp-for="Password" class="form-control" type="password" />
							<span asp-validation-for="Password" class="text-danger" />
						</div>						
						<div class="form-group">
							<button class="btn btn-default" style="width:100%">Create</button>
						</div>

					</form>
				</div><!--/sign up form-->
			</div>
			<div class="col-sm-6 col-sm-offset-1">
				<div class="login-form">
					<img src="~/Images/hot-sam-do-cho-thu-cung-voi-uu-dai-giam-nua-gia-0.jpeg" height="475px" />
				</div><!--/login form-->
			</div>
		</div>
	</div>
</section><!--/form-->
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
