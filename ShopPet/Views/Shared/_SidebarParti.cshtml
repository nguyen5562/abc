<script>
    $(document).ready(function () {
        // Khởi tạo thanh trượt
        $("#sl2").slider({
            tooltip: 'always'
        });

        // Sự kiện khi thanh trượt thay đổi giá trị
        $("#sl2").on("slide", function (slideEvt) {
            // Lấy giá trị min và max từ thanh trượt
            var minban = slideEvt.value[0];
            var maxban = slideEvt.value[1];

            // Cập nhật giá trị minban và maxban trong trường ẩn
            $("#minban").val(minban);
            $("#maxban").val(maxban);

            // Cập nhật giá trị minban và maxban trong thẻ <b>
            $("#min-price").text("₫ " + minban.toLocaleString());
            $("#max-price").text("₫ " + maxban.toLocaleString());
        });
    });
</script>
